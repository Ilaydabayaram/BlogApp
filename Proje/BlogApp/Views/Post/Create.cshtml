@model BlogApp.Models.Concrete.Post

@{
    ViewData["Title"] = "Yeni Yazı Ekle";
}

<div class="container mt-5">
    <h1>Yeni Yazı Ekle</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" id="create-post-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label">Başlık</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Content" class="control-label">İçerik</label>
                    <div id="editor-container" style="height: 300px; background-color: white;"></div>

                    <input type="hidden" id="Content" name="Content" asp-for="Content" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Oluştur" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index">Listeye Geri Dön</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
        // Editörü başlat
        var quill = new Quill('#editor-container', {
            theme: 'snow',
            placeholder: 'Yazınızı buraya yazın...'
        });

        // Form gönderilmeden önce editördeki yazıyı gizli input'a aktar
        var form = document.getElementById('create-post-form');
        form.onsubmit = function() {
            var contentInput = document.getElementById('Content');
            // Editörün içindeki HTML içeriğini alıp inputa yazıyoruz
            contentInput.value = quill.root.innerHTML;
        };
    </script>
}