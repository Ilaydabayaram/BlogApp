@model BlogApp.Models.Concrete.Post

@{
    ViewData["Title"] = "Yazıyı Düzenle";
}

<div class="container mt-5">
    <h1>Yazıyı Düzenle</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" id="edit-post-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PublishedDate" /> @* Tarih kaybolmasın *@

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Content" class="control-label"></label>
                    <div id="editor-container" style="height: 300px;"></div>
                    <input type="hidden" id="Content" name="Content" asp-for="Content" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index">Listeye Geri Dön</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

    <script>
        var quill = new Quill('#editor-container', {
            theme: 'snow'
        });

        // Var olan içeriği editöre yükle (HTML Decode yaparak)
        var existingContent = `@Html.Raw(Model.Content)`;
        quill.clipboard.dangerouslyPasteHTML(existingContent);

        // Form gönderilmeden önce editördeki veriyi hidden input'a aktar
        var form = document.getElementById('edit-post-form');
        form.onsubmit = function() {
            var contentInput = document.getElementById('Content');
            contentInput.value = quill.root.innerHTML;
        };
    </script>
}